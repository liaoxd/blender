<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.halfcigarette.dietitian.ui.fragment.MeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHigh"
        android:padding="5dp"
        android:background="@color/theme_color"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/add_food_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/theme_color"
            android:textSize="15dp"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:text="膳食专家"/>
        <TextView
            android:id="@+id/start_grade"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/theme_color"
            android:textSize="15dp"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/me_portrait" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="成电半根烟"
            android:textColor="#383838"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="43dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="ID:979591224"
            android:textColor="#383838"
            android:textSize="15dp" />

    </RelativeLayout>

    <!-- 一段空白-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"/>


    <RelativeLayout
        android:id="@+id/message_manager"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/listitem_selector"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/me_mycollect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="信息管理"
            android:textColor="#383838"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_tags"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/listitem_selector"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/me_lable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="标签选择"
            android:textColor="#383838"
            android:textSize="15dp" />
    </RelativeLayout>


    <!-- 一段空白-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"/>

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/listitem_selector"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/me_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:text="设置"
            android:textColor="#383838"
            android:textSize="15dp" />
    </RelativeLayout>
    <!-- 一段空白-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"/>

    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/listitem_selector"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/me_recentscan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:text="关于我们"
            android:textColor="#383838"
            android:textSize="15dp" />
    </RelativeLayout>




</LinearLayout>
