<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="评分结果："
        android:textColor="#383838"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.halfcigarette.dietitian.ui.custom.CountView
            android:id="@+id/tv_gradedialog_grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="99"
            android:textColor="#383838"
            android:textSize="80sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_gradedialog_advise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="您今日摄入蛋白质偏少，建议饭后增加一杯牛奶。"
        android:textColor="#383838"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/bt_gradedialog_iknow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="我知道了">

        </com.gc.materialdesign.views.ButtonFlat>

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/bt_gradedialog_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="12dp"
            android:text="分享给朋友">

        </com.gc.materialdesign.views.ButtonFlat>
    </LinearLayout>

</LinearLayout>